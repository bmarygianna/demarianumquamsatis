---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<div class="brand">
			<h2><a href="/">{SITE_TITLE}</a></h2>
			<p class="tagline">Contemplative writing on Mary, the Church, and everyday discipleship.</p>
		</div>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Journal</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 2em;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.brand {
		display: flex;
		flex-direction: column;
		justify-content: center;
	}
	.tagline {
		margin: 0;
		font-size: 0.85em;
		color: rgb(var(--gray));
	}
	@media (max-width: 720px) {
		nav {
			flex-direction: column;
			align-items: flex-start;
		}
		.internal-links {
			display: flex;
			width: 100%;
			justify-content: space-between;
			gap: 0.25em;
			flex-wrap: wrap;
		}
		nav a {
			padding-left: 0;
		}
	}
</style>
